<body>
  <div class="card" role="main">
    <h1>Formulir Registrasi</h1>
    <p class="lead">Isi data di bawah — hasilnya akan disimpan ke Google Sheets.</p>

    <form id="myForm" autocomplete="off">
      <div class="row">
        <div>
          <label for="tanggal">Tanggal</label>
          <input id="tanggal" name="tanggal" type="date" required />
        </div>
        <div>
          <label for="nama">Nama</label>
          <input id="nama" name="nama" type="text" placeholder="Nama lengkap" required />
        </div>
      </div>

      <div class="row">
        <div>
          <label for="hp">Nomor HP</label>
          <input id="hp" name="hp" type="tel" placeholder="08xxxxxxxxxx" pattern="^\+?\d{8,15}$" required />
        </div>
        <div>
          <label for="email">Email</label>
          <input id="email" name="email" type="email" placeholder="contoh@domain.com" required />
        </div>
      </div>

      <div class="actions">
        <button id="submitBtn" type="submit">Kirim</button>
        <div class="msg" id="statusMsg"></div>
      </div>
    </form>
  </div>

  <script>
    // GANTI nilai ini dengan URL Web App Google Apps Script lo (lihat instruksi)
    const scriptURL = "PASTE_URL_WEB_APP_DISINI";

    const form = document.getElementById("myForm");
    const statusMsg = document.getElementById("statusMsg");
    const submitBtn = document.getElementById("submitBtn");

    form.addEventListener("submit", async (e) => {
      e.preventDefault();

      // basic UI feedback
      submitBtn.disabled = true;
      submitBtn.textContent = "Mengirim...";
      statusMsg.textContent = "";

      // Validasi pattern nomor hp (simple)
      const hp = form.hp.value.trim();
      const hpRegex = /^\+?\d{8,15}$/;
      if (!hpRegex.test(hp)) {
        statusMsg.textContent = "Nomor HP tidak valid (8-15 angka, boleh +).";
        submitBtn.disabled = false;
        submitBtn.textContent = "Kirim";
        return;
      }

      try {
        const formData = new FormData(form);
        // fetch ke Apps Script (menggunakan POST form data)
        const resp = await fetch(scriptURL, {
          method: "POST",
          body: formData,
          mode: "cors"
        });

        if (resp.ok) {
          statusMsg.textContent = "Berhasil dikirim — terima kasih!";
          form.reset();
        } else {
          const text = await resp.text();
          statusMsg.textContent = "Gagal: " + (text || resp.status);
        }
      } catch (err) {
        statusMsg.textContent = "Error koneksi: " + err.message;
      } finally {
        submitBtn.disabled = false;
        submitBtn.textContent = "Kirim";
      }
    });
  </script>
</body>
